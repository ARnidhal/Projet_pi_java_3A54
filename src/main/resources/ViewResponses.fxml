<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<!-- ViewResponses.fxml -->
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.visita.controllers.ViewResponsesController"
      spacing="15"
      alignment="CENTER"
      style="-fx-background-color: #f3cc97; -fx-padding: 20;">

    <!-- Reclamation ID Label -->
    <Label fx:id="reclamationIdLabel" text="Reclamation ID:" style="-fx-font-size: 16pt; -fx-padding: 5px; -fx-margin: 5px; -fx-text-fill: #333;"/>

    <!-- Responses TextArea -->
    <TextArea fx:id="responsesTextArea" prefWidth="350.0" prefHeight="150.0" editable="false" style="-fx-font-size: 14pt; -fx-padding: 10px; -fx-margin: 10px; -fx-background-color: #fafafa; -fx-text-fill: #333;"/>

    <!-- Rating Component -->
    <Label text="Rate this response:" style="-fx-font-size: 16pt; -fx-padding: 5px; -fx-margin: 5px; -fx-text-fill: #333;"/>
    <Slider fx:id="ratingSlider" min="0" max="5" showTickMarks="true" showTickLabels="true" minorTickCount="0" blockIncrement="1" style="-fx-font-size: 14pt; -fx-padding: 5px; -fx-margin: 5px; -fx-background-color: #fafafa;"/>

    <!-- Average Rating Label -->
    <Label fx:id="averageRatingLabel" text="Average Rating: " style="-fx-font-size: 16pt; -fx-padding: 5px; -fx-margin: 5px; -fx-text-fill: #333;"/>

    <!-- Send Rating Button -->
    <Button fx:id="sendRatingButton" text="Send Rating" onAction="#sendRating" style="-fx-font-size: 16pt; -fx-padding: 5px; -fx-margin: 5px; -fx-background-color: #3d8cb0; -fx-text-fill: #fff;"/>

</VBox>
