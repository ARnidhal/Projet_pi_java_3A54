<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo1.FormReclamationController"
      style="-fx-background-color: #f0f0f0; -fx-padding: 20px;">

    <!-- Header Label -->
    <Label text="Reclamation Form" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Form GridPane -->
    <GridPane alignment="CENTER" hgap="10" vgap="10" style="-fx-background-color: #ffffff; -fx-padding: 20px; -fx-border-radius: 10px;">
        <!-- Name Label and TextField -->
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   promptText="Enter Name" style="-fx-font-size: 14px;"/>

        <!-- Category Label and ComboBox -->
        <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="categoryComboBox" promptText="Select Category" GridPane.columnIndex="1" GridPane.rowIndex="1"
                  style="-fx-font-size: 14px;"/>

        <!-- Subject Label and TextField -->
        <Label text="Subject:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
        <TextField fx:id="subjectTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   promptText="Enter Subject" style="-fx-font-size: 14px;"/>

        <!-- Description Label and TextArea -->
        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="descriptionTextArea" prefHeight="100" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3"
                  promptText="Enter Description" style="-fx-font-size: 14px;"/>
    </GridPane>

    <!-- Submit Button -->
    <Button text="Submit" onAction="#submitReclamation" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-border-color: #388E3C; -fx-border-width: 1px; -fx-cursor: hand;"/>
</VBox>
