<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo1.MainController"
      style="-fx-background-color: #f0f0f0; -fx-padding: 20px;">

    <!-- Dashboard Buttons -->
    <Button text="Create Reclamation" onAction="#showCreateReclamationView"
            style="-fx-font-size: 16px; -fx-pref-width: 200px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
            fx:id="createReclamationButton"/>

    <Button text="Show Reclamations" onAction="#showShowReclamationView"
            style="-fx-font-size: 16px; -fx-pref-width: 200px; -fx-background-color: #2196F3; -fx-text-fill: white;"
            fx:id="showReclamationsButton"/>

    <!-- Add more buttons for other functionalities as needed -->

</VBox>
