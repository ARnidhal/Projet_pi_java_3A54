<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.UpdateReclamationController" style="-fx-background-color: #f3cc97;">
    <!-- Header Label -->
    <Label text="Modifier la réclamation" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Nom Field -->
    <TextField fx:id="nomField" prefWidth="200" promptText="Nom" style="-fx-font-size: 14px;"/>

    <!-- Catégorie ComboBox -->
    <ComboBox fx:id="categorieComboBox" prefWidth="200" promptText="Catégorie" style="-fx-font-size: 14px;">
        <!-- Predefined category choices -->
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Technical"/>
                <String fx:value="Customer Service"/>
                <String fx:value="Billing"/>
                <String fx:value="Product Quality"/>
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Sujet Field -->
    <TextField fx:id="sujetField" prefWidth="200" promptText="Sujet" style="-fx-font-size: 14px;"/>

    <!-- Description Field -->
    <TextField fx:id="descriptionField" prefWidth="200" promptText="Description" style="-fx-font-size: 14px;"/>

    <!-- Update Button -->
    <Button text="Mettre à jour" onAction="#handleUpdate" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 8px 16px;"/>
</VBox>
