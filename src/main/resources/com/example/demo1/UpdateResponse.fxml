<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefWidth="400.0" prefHeight="300.0">
    <Label text="Update Response" style="-fx-font-size: 16pt;"/>
    <HBox spacing="10.0">
        <Label text="Response ID:"/>
        <TextField fx:id="responseIdField"/>
    </HBox>
    <HBox spacing="10.0">
        <Label text="Response Content:"/>
        <TextArea fx:id="responseContentTextArea" prefWidth="300.0" prefHeight="200.0"/>
    </HBox>
    <HBox spacing="10.0">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
