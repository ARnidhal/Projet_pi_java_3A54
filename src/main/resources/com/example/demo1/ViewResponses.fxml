<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo1.ViewResponsesController"
      spacing="15"
      alignment="CENTER"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20;">

    <!-- Reclamation ID Label -->
    <Label fx:id="reclamationIdLabel" text="Reclamation ID:" style="font-size: 16pt; padding: 5px; margin: 5px;"/>

    <!-- Responses TextArea -->
    <TextArea fx:id="responsesTextArea" prefWidth="350.0" prefHeight="150.0" editable="false" style="font-size: 14pt; padding: 10px; margin: 10px;"/>

    <!-- Rating Component -->
    <Label text="Rate this response:" style="font-size: 16pt; padding: 5px; margin: 5px;"/>
    <Slider fx:id="ratingSlider" min="0" max="5" showTickMarks="true" showTickLabels="true" minorTickCount="0" blockIncrement="1" style="font-size: 14pt; padding: 5px; margin: 5px;"/>

    <!-- Average Rating Label -->
    <Label fx:id="averageRatingLabel" text="Average Rating: " style="font-size: 16pt; padding: 5px; margin: 5px;"/>

    <!-- Send Rating Button -->
    <Button fx:id="sendRatingButton" text="Send Rating" onAction="#sendRating" style="font-size: 16pt; padding: 5px; margin: 5px;"/>

</VBox>
