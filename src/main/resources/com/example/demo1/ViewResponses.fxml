<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo1.ViewResponsesController"
      prefWidth="400.0" prefHeight="300.0"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20; -fx-spacing: 10;">

    <!-- Reclamation ID Label -->
    <Label fx:id="reclamationIdLabel" text="Reclamation ID:" style="-fx-font-size: 14pt;"/>

    <!-- Responses TextArea -->
    <TextArea fx:id="responsesTextArea" prefWidth="300.0" prefHeight="200.0" editable="false" style="-fx-font-size: 14pt;"/>

</VBox>
